<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zzh="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/public_title" android:id="@+id/publicTitle"/>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <FrameLayout
            android:layout_marginBottom="@dimen/len_60"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <org.odk.collect.draw.DrawView
                android:id="@+id/drawView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tvTip"
                android:layout_gravity="center"
                android:text="请绘制图形"
                android:letterSpacing="1.5"
                android:textSize="@dimen/font_60"
                android:textColor="#E5E5E5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />

            <ImageView
                android:layout_marginStart="@dimen/len_20"
                android:visibility="gone"
                android:id="@+id/ivSimpleImage"
                tools:src="@drawable/icon_gradual_change_background"
                android:layout_width="@dimen/len_100"
                android:layout_height="@dimen/len_100"/>

        </FrameLayout>


        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/len_60"
            android:layout_marginRight="@dimen/len_20"
            android:layout_marginBottom="@dimen/len_20">


            <dz.solc.viewtool.view.textview.FilletView
                android:id="@+id/cvClear"
                android:layout_width="@dimen/len_120"
                android:layout_height="@dimen/len_50"
                android:layout_marginEnd="@dimen/len_30"
                android:background="@color/white"
                android:gravity="center"
                android:text="重绘"
                android:textSize="@dimen/font_20"
                android:textStyle="bold"
                zzh:f_cornerRadius="@dimen/len_80"
                zzh:f_normalBgColor="#EEEEEE"
                zzh:f_normalTextColor="@color/black"
                zzh:f_pressedBgColor="#EEEEEE"
                zzh:f_pressedTextColor="@color/black"
                zzh:f_strokeWidth="0dp" />

            <dz.solc.viewtool.view.textview.FilletView
                android:id="@+id/fVSure"
                android:layout_width="@dimen/len_120"
                android:layout_height="@dimen/len_50"
                android:background="@color/white"
                android:gravity="center"
                android:text="确定"
                android:textSize="@dimen/font_20"
                android:textStyle="bold"
                zzh:f_cornerRadius="@dimen/len_80"
                zzh:f_normalBgColor="#A885D3"
                zzh:f_normalTextColor="@color/black"
                zzh:f_pressedBgColor="#A885D3"
                zzh:f_pressedTextColor="@color/black"
                zzh:f_strokeWidth="0dp" />


        </LinearLayout>


    </RelativeLayout>

    <include
        android:id="@+id/public_voice_bar"
        layout="@layout/public_voice_bar" />

</LinearLayout>